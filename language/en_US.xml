<?xml version="1.0" encoding="utf-8"?>
<language>
    
    <display_name>Posts subsystem</display_name>
    <icon>fa-newspaper-o</icon>
    <description>
        Blogging capability.
    </description>
    
    <index>
        <title>Posts</title>
        <menu_caption>Posts</menu_caption>
        <buttons>
            <add>New</add>
        </buttons>
    </index>
    
    <pages>
        <by_category>
            <title>Posts in {$category}</title>
            <no_records>No posts have been found for this category.</no_records>
        </by_category>
        <by_date>
            <title>Posts published on {$date}</title>
            <no_records>No posts have been found for this date range.</no_records>
        </by_date>
        <by_author>
            <title>Posts published by {$author}</title>
            <no_records>No posts have been published by this author.</no_records>
        </by_author>
    </pages>
    
    <record_nav>
        <search_placeholder>Search by id, parent, slug, title, excerpt or content</search_placeholder>
        <columns>
            <title>
                <caption>Title</caption>
                <layout xnowrap="true" />
            </title>
            <excerpt>
                <caption><![CDATA[ Excerpt &amp; details ]]></caption>
                <layout xnowrap="true" />
            </excerpt>
            <author>
                <caption>Author</caption>
                <layout xnowrap="true" />
            </author>
            <publishing_date>
                <caption>Published</caption>
                <layout xnowrap="true" />
                <order_asc  id="1">Order by publishing date ascending</order_asc>
                <order_desc id="2">Order by publishing date descending</order_desc>
            </publishing_date>
            <last_update>
                <caption>Last activity</caption>
                <layout xnowrap="true" />
                <order_asc  id="3">Order by last activity update ascending</order_asc>
                <order_desc id="4">Order by last activity update descending</order_desc>
            </last_update>
            <views>
                <caption><![CDATA[ <span class="fa fa-eye fa-fw"></span> ]]></caption>
                <layout xnowrap="true" />
                <order_asc  id="5">Order by views ascending</order_asc>
                <order_desc id="6">Order by views descending</order_desc>
            </views>
            <comments>
                <caption><![CDATA[ <span class="fa fa-comments-o fa-fw"></span> ]]></caption>
                <layout xnowrap="true" />
                <order_asc  id="7">Order by comments count ascending</order_asc>
                <order_desc id="8">Order by comments count descending</order_desc>
            </comments>
            <featured_image>
                <caption>Featured image</caption>
                <layout xnowrap="true" xalign="center"/>
            </featured_image>
        </columns>
        <actions>
            <edit>Edit</edit>
            <trash>Trash</trash>
            <copy>Copy</copy>
        </actions>
        <extras>
            <expires>Expires in</expires>
            <expired>Expired</expired>
        </extras>
    </record_nav>
    
    <status_labels>
        <draft>Draft</draft>
        <published>Published</published>
        <reviewing>Reviewing</reviewing>
        <hidden>Hidden</hidden>
        <trashed>Trashed</trashed>
    </status_labels>
    
    <form>
        <add_title>New post</add_title>
        <edit_title>Editing post</edit_title>
        <fields>
            <title>
                <placeholder>Enter a title for the post</placeholder>
            </title>
            <content>
                <placeholder>Type or paste the contents of your post. Use the buttons below this editor to insert images/videos, tag users and add hashtags among other options.</placeholder>
            </content>
            <excerpt>
                <caption>Excerpt:</caption>
                <placeholder>Type an excerpt of the contents. Leave it blank for automatic generation.</placeholder>
            </excerpt>
        </fields>
        
        <buttons>
            <save_draft>Save draft</save_draft>
            <publish>Publish</publish>
        </buttons>
        
        <post_addons>
            <addon function="toggle_post_excerpt_textarea" data_related_field="excerpt" icon="fa-bolt">
                <caption>Excerpt</caption>
                <title>Toggle excerpt introduction area on/off</title>
            </addon>
            <addon function="insert_gallery_image_in_post_editor" icon="fa-file-image-o">
                <caption>Image</caption>
                <title>Insert image from media gallery</title>
            </addon>
        </post_addons>
    </form>
    
    <messages>
        <missing>
            <id>Please provide a post id</id>
            <title>Please specify a title for the post</title>
            <slug>Please specify a slug for the post</slug>
            <content>Post contents shouldn't be empty</content>
            <main_category>Please specify a main category for the post</main_category>
        </missing>
        <post_not_found>The post wasn't found in the database</post_not_found>
    </messages>
    
    <settings_data>
        <title>Posts reading/writing options</title>
        <specs key="items_per_page">
            <title>Posts to show per index page</title>
            <description><![CDATA[
                Amount of posts to show per index (home, archives, etc.).
                Defaults to 30.
            ]]></description>
            <type>number</type>
            <options>
                <min>1</min>
                <max>255</max>
            </options>
        </specs>
        <specs key="excerpt_length">
            <title>Excerpt length</title>
            <description><![CDATA[
                Amount of characters to trim the posts excerpt to.
            ]]></description>
            <type>number</type>
            <options>
                <min>30</min>
                <max>255</max>
            </options>
        </specs>
        <specs key="featured_posts_tag">
            <title>Featured posts tag</title>
            <description><![CDATA[
                Set the tag (without the #) to use for the featured posts functionality in the home layout.
            ]]></description>
            <type>text</type>
        </specs>
        <specs key="enforced_expiration_by_category">
            <title>Enforced post expiration by category</title>
            <description><![CDATA[
                Specify a list of <code>category_slug - time_to_live</code>, one per line, to specify for how many
                hours the posts that have one of the listed categories as main will be available.
                Once the time expires, posts will no longer appear
                on indexes and a "not found" error will be thrown when opened directly.<br>
                <span class="fa fa-info-circle"></span> Note: this setting will override any expiration manually set
                by the post author.
            ]]></description>
            <type>textarea</type>
        </specs>
    </settings_data>
    
</language>
